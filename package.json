{
  "name": "nodeSpace",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Mstislav Zhivodkov",
    "email": "stevemyz@gmail.com"
  },
  "scripts": {
    "postinstall": "mkdir -p dist",
    "start": "npm run client && npm run server",
    "dev": "parallelshell \"npm run server:dev\" \"npm run client:dev\"",

    "server": "node server",
    "server:dev": "nodemon --watch server --watch common server/index.js",

    "client": "browserify client/index.js | uglifyjs -mc --screw-ie8 > dist/bundle.js",
    "client:dev": "watchify client/index.js -o dist/bundle.js -dv",

    "lint": "eslint client server"
  },
  "engines": {
    "node": "4.2.1"
  },
  "dependencies": {
    "async": "^1.5.0",
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "express": "^4.13.3",
    "lodash": "^3.10.1",
    "p2": "^0.7.1",
    "pixi.js": "^3.0.8",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "uglify-js": "^2.6.1",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.5",
    "eslint": "^1.10.1",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "watchify": "^3.6.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
